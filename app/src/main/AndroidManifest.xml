<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lb.richardk.lbfour">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".Login"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".VehicleActivity"
            android:parentActivityName=".RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SendAlertActivity"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ReceivedActivity"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ContactUsActivity"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FeedbackActivity"
            android:parentActivityName=".ContactUsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SettingActivity"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HelpEnquireActivity"
            android:parentActivityName=".ContactUsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ForgotPasswordActivity"
            android:parentActivityName=".Login"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ResetPasswordActivity"
            android:parentActivityName=".Login"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".TutorialActivity"
            android:parentActivityName=".AccountActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AccountActivity"
            android:parentActivityName=".SettingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddVehicleActivity"
            android:parentActivityName=".AccountActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ReportActivity"
            android:parentActivityName=".SettingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".UpdateDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SentReceivedActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ChangePasswordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".NotificationsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".VehicleViewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".VehicleReg1Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DeleteVehicleActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".AboutActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".RateAlertActivity"
            android:screenOrientation="portrait"/>
        <service
            android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>


</manifest>